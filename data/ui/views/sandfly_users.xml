<!--
=============================================================================
 default/data/ui/views/sandfly_users.xml
 Sandfly Security for Splunk App
 Users & Access Overview
=============================================================================

PURPOSE

Displays all Sandfly users retrieved from the /v4/users API endpoint and
ingested into Splunk as sandfly:users events.

This view supports both executive oversight and operational review by
answering:

- Who has access to Sandfly?
- What roles are assigned?
- Are users authenticating via SSO?
- When did users last log in?
- Are there failed login patterns?

All fields displayed are sourced directly from the Sandfly API response.
=============================================================================
-->

<dashboard version="1.1" theme="light">
  <label>Users</label>

  <!-- =============================================================== -->
  <!-- ROW 1: EXECUTIVE SUMMARY                                        -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>Total Users</title>
      <single>
        <search>
          <query>
            index=* sourcetype=sandfly:users
            | stats dc(username)
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>SSO Users</title>
      <single>
        <search>
          <query>
            index=* sourcetype=sandfly:users
            | search sso=true
            | stats count
          </query>
        </search>
      </single>
    </panel>

    <panel>
      <title>Users with Failed Logins</title>
      <single>
        <search>
          <query>
            index=* sourcetype=sandfly:users
            | search logins_failed_count > 0
            | stats count
          </query>
        </search>
      </single>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- ROW 2: ROLE DISTRIBUTION                                        -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>User Roles Distribution</title>
      <chart>
        <search>
          <query>
            index=* sourcetype=sandfly:users
            | mvexpand roles
            | stats count by roles
          </query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- ROW 3: USER DETAILS                                             -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>User Accounts</title>
      <table>
        <search>
          <query>
            index=* sourcetype=sandfly:users
            | table
                username
                full_name
                email
                roles
                sso
                last_login_date
                last_login_ip
                logins_failed_count
                created_date
            | sort username
          </query>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">true</option>
      </table>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- ROW 4: FAILED LOGIN CONTEXT                                     -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>Failed Login Details</title>
      <table>
        <search>
          <query>
            index=* sourcetype=sandfly:users
            | search logins_failed_count > 0
            | table
                username
                logins_failed_count
                logins_failed
            | sort - logins_failed_count
          </query>
        </search>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

</dashboard>
