<!--
=============================================================================
 default/data/ui/views/sandfly_overview.xml
 Sandfly Security for Splunk App
 Overview Dashboard
=============================================================================

Operational overview of Sandfly Security data ingested into Splunk.
Displays host counts, result activity, alert/error volume, scan activity,
and ingestion health using Sandfly sourcetypes.

=============================================================================
-->

<dashboard version="1.1" theme="light">
  <label>Sandfly Overview</label>

  <!-- =============================================================== -->
  <!-- ROW 1: KEY METRICS                                              -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>Total Hosts</title>
      <single>
        <search>
          <query>
            index=* sourcetype=sandfly:hosts
            | stats count
          </query>
        </search>
        <option name="colorMode">block</option>
        <option name="useColors">true</option>
      </single>
    </panel>

    <panel>
      <title>Active Alerts (Last 24h)</title>
      <single>
        <search>
          <query>
            index=* sourcetype=sandfly:results earliest=-24h
            | search result_type=alert
            | stats count
          </query>
        </search>
        <option name="colorMode">block</option>
        <option name="useColors">true</option>
      </single>
    </panel>

    <panel>
      <title>Error Results (Last 24h)</title>
      <single>
        <search>
          <query>
            index=* sourcetype=sandfly:results earliest=-24h
            | search result_type=error
            | stats count
          </query>
        </search>
        <option name="colorMode">block</option>
        <option name="useColors">true</option>
      </single>
    </panel>

    <panel>
      <title>Events Ingested (24h)</title>
      <single>
        <search>
          <query>
            index=* sourcetype=sandfly:* earliest=-24h
            | stats count
          </query>
        </search>
        <option name="colorMode">block</option>
        <option name="useColors">true</option>
      </single>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- ROW 2: RESULT ACTIVITY                                          -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>Sandfly Results Over Time</title>
      <chart>
        <search>
          <query>
            index=* sourcetype=sandfly:results
            | timechart span=1h count
          </query>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.legend.placement">bottom</option>
      </chart>
    </panel>

    <panel>
      <title>Results by Type (Last 24h)</title>
      <chart>
        <search>
          <query>
            index=* sourcetype=sandfly:results earliest=-24h
            | stats count by result_type
          </query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- ROW 3: OPERATIONAL ACTIVITY                                     -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>Recent Audit Events</title>
      <table>
        <search>
          <query>
            index=* sourcetype=sandfly:logs:audit
            | sort - _time
            | head 10
          </query>
        </search>
        <option name="wrap">true</option>
      </table>
    </panel>

    <panel>
      <title>Recent Scan Activity</title>
      <table>
        <search>
          <query>
            index=* sourcetype=sandfly:scan earliest=-24h
            | sort - _time
            | head 10
          </query>
        </search>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- ROW 4: INGESTION HEALTH                                         -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>Events by Sourcetype (24h)</title>
      <table>
        <search>
          <query>
            index=* sourcetype=sandfly:* earliest=-24h
            | stats count by sourcetype
            | sort - count
          </query>
        </search>
      </table>
    </panel>
  </row>

</dashboard>
