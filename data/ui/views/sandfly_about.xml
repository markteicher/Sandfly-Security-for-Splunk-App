<dashboard version="1.1" theme="light">
  <label>‚ÑπÔ∏è About Sandfly</label>

  <!-- =============================================================== -->
  <!-- BASE SEARCH                                                     -->
  <!-- =============================================================== -->
  <search>
    <query>
      | inputlookup sandfly_version_lookup
    </query>
  </search>

  <!-- =============================================================== -->
  <!-- PLATFORM INFORMATION                                            -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>üñ•Ô∏è Platform Information</title>
      <table>
        <search>
          <query>
            | inputlookup sandfly_version_lookup
            | fields version build_date website copyright
          </query>
        </search>
        <option name="count">1</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- CRYPTOGRAPHIC IDENTITY                                          -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>üîê Cryptographic Identity</title>
      <table>
        <search>
          <query>
            | inputlookup sandfly_version_lookup
            | fields server_public_key node_public_key
          </query>
        </search>
        <option name="count">1</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- SPLUNK APP METADATA                                             -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>üì¶ Splunk App Metadata</title>
      <table>
        <search>
          <query>
            | makeresults count=4
            | streamstats count as row
            | eval Key=case(
                row=1,"Application",
                row=2,"Integration Type",
                row=3,"Data Format",
                row=4,"Splunk Compatibility"
              )
            | eval Value=case(
                row=1,"Sandfly Security for Splunk",
                row=2,"REST API (Sandfly v4)",
                row=3,"JSON",
                row=4,"Splunk Enterprise & Splunk Cloud"
              )
            | table Key Value
          </query>
        </search>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- ATTRIBUTION                                                     -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>‚öñÔ∏è Attribution</title>
      <table>
        <search>
          <query>
            | makeresults count=2
            | streamstats count as row
            | eval Statement=case(
                row=1,"Sandfly Security is a registered trademark of Sandfly Security, Ltd.",
                row=2,"This Splunk App is an independent integration and is not an official Sandfly Security product unless explicitly stated otherwise."
              )
            | table Statement
          </query>
        </search>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

  <!-- =============================================================== -->
  <!-- REFERENCES                                                      -->
  <!-- =============================================================== -->
  <row>
    <panel>
      <title>üîó References</title>
      <table>
        <search>
          <query>
            | makeresults count=3
            | streamstats count as row
            | eval Name=case(
                row=1,"Sandfly Security Website",
                row=2,"Sandfly Documentation",
                row=3,"Splunk Documentation"
              )
            | eval URL=case(
                row=1,"https://www.sandflysecurity.com",
                row=2,"https://docs.sandflysecurity.com",
                row=3,"https://docs.splunk.com"
              )
            | table Name URL
          </query>
        </search>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>

</dashboard>
